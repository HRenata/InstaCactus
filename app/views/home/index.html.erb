<h1>Home page</h1>
<br><br>  <%= link_to 'Create new post', new_post_path%>

<div class="posts">
    <% @posts.each do |post| %>
        <section class="post">
            <div class="user">
                <div class="avatar">
                    <img src="user_avatar.jpg">
                </div>
                <div class="username">
                    <%= post.user.firstName%> <%= post.user.secondName%>
                </div>   
                <td>    <%= link_to 'Destroy', post, class: "btn btn-outline-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </div>
            <%= image_tag post.image, class: 'main-image' %>
            <div class="description">
                <%= post.description %>
            </div>
        </section> 

    <% end %>
</div>