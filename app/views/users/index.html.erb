<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Secondname</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.firstName %></td>
        <td><%= user.secondName %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user, class: "btn btn-outline-info" %></td>
        <% if user_signed_in? && (user.id == current_user.id) %>
          <td><%= link_to 'Edit', edit_user_path(user), class: "btn btn-outline-warning" %></td>
          <td><%= link_to 'Destroy', user, class: "btn btn-outline-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
        <td></td>
        <td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path, class: "btn btn-outline-success" %>