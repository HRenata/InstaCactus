<p id="notice"><%= notice %></p>

<div class="user-profile">
  <div class="profile row">
    <div class="col-md-4 avatar">
      <div class="wrapper">
        <img class="rounded-circle img-fluid" src="https://bipbap.ru/wp-content/uploads/2019/07/skvishi-32-800x800-640x640.jpg">
      </div>
    </div>
    <div class="col-md-8 basic-info">
      <h4 class="username">
        <%= @user.firstName %>
        <%= @user.secondName %>
      </h4>
      <%= link_to 'Edit', edit_user_path(@user), class: "btn btn-outline-info"  %>
      <ul>
        <li><span><%= @posts.count %></span> posts</li>
        <li><span>100</span> followers</li>
        <li><span>100</span> following</li>
      </div>
    </div>
  </div>

<%= link_to 'Back', users_path, class: "btn btn-outline-info"  %>

<div class="posts">
    <% @posts.each do |post| %>
        <section class="post">
            <div class="user">
                <div class="username">
                    <%= post.user.firstName%> <%= post.user.secondName%>
                </div>   
                <td>   <%= link_to 'Destroy', post, class: "btn btn-outline-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </div>
            <%= image_tag post.image, class: 'main-image' %>
            <div class="description">
                <%= post.description %>
            </div>
        </section> 

    <% end %>
</div>
</div>
