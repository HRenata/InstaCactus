<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= form.label :firstName, class: "col-sm-1 col-form-label" %>
    <div class="col-sm-11">
      <%= form.text_field :firstName, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :secondName, class: "col-sm-1 col-form-label" %>
    <div class="col-sm-11">
      <%= form.text_field :secondName, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :email, class: "col-sm-1 col-form-label" %>
    <div class="col-sm-11">
      <%= form.text_field :email, class: "form-control", type:"email" %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit "Update", class: "btn btn-outline-info" %>
  </div>
<% end %>
