<h2>Change your password</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group row">
    <%= f.label :password, "New password", class: "col-sm-1 col-form-label" %><br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em><br />
    <% end %>
    <div class="col-sm-3">
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :password_confirmation, "Confirm new password", class: "col-sm-1 col-form-label" %><br />
    <div class="col-sm-3">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Change my password", class: "btn btn-outline-info" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
